{
    "manifest_version": 3,
    "name": "News Summarizer",
    "version": "1.0",
    "description": "Summarizes the news article from the current tab",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  